<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="8dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/item_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:text="Mahsulot nomi"
                android:textColor="#000"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_product_qolgan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qolgan:"
                android:textSize="10sp"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_product_qolgan_soni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="soni"
                android:layout_marginRight="20dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_product_qolgan_text" />
            <TextView
                android:id="@+id/item_product_narx"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Narxi"
                android:layout_marginRight="20dp"
                android:textColor="#000"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/item_product_name" />
            <TextView
                android:id="@+id/item_product_karobkada_text"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karobkada soni:"
                android:textSize="10sp"
                android:layout_marginRight="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_product_qolgan_soni" />

            <TextView
                android:id="@+id/item_product_karobkada_soni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="72x"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/item_product_karobkada_text"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintRight_toRightOf="parent" />
            <TextView
                android:id="@+id/item_product_mijoz_uchun_narx_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mijozlar uchun narx:"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/item_product_narx"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textColor="#000"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/item_product_mijoz_uchun_narx_soni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1170so'm"
                android:layout_marginTop="16dp"
                android:layout_marginRight="60dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/item_product_karobkada_soni"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#000"
                android:textSize="20sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>