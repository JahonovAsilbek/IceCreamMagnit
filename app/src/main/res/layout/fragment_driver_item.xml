<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".haydovchilar.DriverItemFragment">

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/driver_item_yagi_qoshish_btn"
        android:id="@+id/driver_item_recyclerview"
        android:layout_height="0dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        app:layout_constraintRight_toLeftOf="@id/driver_item_info"
        android:background="@drawable/btn_back"
        android:text="Yangi qo'shish"
        android:textSize="22sp"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/driver_item_recyclerview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/driver_item_yagi_qoshish_btn"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.AppCompatButton
        app:layout_constraintTop_toBottomOf="@id/driver_item_recyclerview"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/driver_item_info"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:text="Info"
        android:textColor="#fff"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/driver_item_yagi_qoshish_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="60dp"
        android:background="@drawable/btn_back"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>