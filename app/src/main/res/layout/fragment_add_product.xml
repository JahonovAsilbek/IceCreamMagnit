<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".mahsulotlar.AddProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    app:hintTextColor="#03A9F4"
                    app:boxStrokeWidthFocused="1.5dp"
                    app:boxStrokeColor="#03A9F4"
                    app:helperTextTextColor="#03A9F4"
                    app:errorEnabled="true"
                    app:errorTextColor="#ff0000"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Mahsulot nomi"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/add_product_mahsulot_nomi"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:layout_height="50dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    app:hintTextColor="#03A9F4"
                    app:boxStrokeWidthFocused="1.5dp"
                    app:boxStrokeColor="#03A9F4"
                    app:helperTextTextColor="#03A9F4"
                    app:errorEnabled="true"
                    app:errorTextColor="#ff0000"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Mahsulot narxi"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/add_product_mahsulot_narxi"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:layout_height="50dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/add_product_buttons"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="0dp"
                    android:id="@+id/add_product_bekor_qilish"
                    android:text="Bekor qilish"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/add_product_ok"
                    android:text="Qo'shish"
                    android:backgroundTint="#03A9F4"
                    android:layout_margin="16dp"
                    android:textColor="#fff"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>